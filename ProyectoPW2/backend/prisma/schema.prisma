generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo para los juegos
model Juego {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  estrellas   Int      @default(0)
  imagen      String
  trailer     String
  precio      Float
  oferta      Boolean  @default(false)
  plataforma  String
  categoria   String
  resenas     Resena[]
}

// Modelo para las rese√±as
model Resena {
  id        Int    @id @default(autoincrement())
  texto     String
  estrellas Int
  juegoId   Int
  juego     Juego  @relation(fields: [juegoId], references: [id])
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nombre   String
  email    String @unique
  password String
}

model Noticia {
  id        Int    @id @default(autoincrement())
  titulo    String
  contenido String
  fecha     String
}

