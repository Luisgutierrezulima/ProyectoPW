generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo para los juegos
model Juego {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  estrellas   Int
  imagen      String
  trailer     String
  precio      Float
  oferta      Boolean  @default(false)
  resenas     Resena[]
}

// Modelo para las rese√±as
model Resena {
  id        Int    @id @default(autoincrement())
  texto     String
  estrellas Int
  juegoId   Int
  juego     Juego  @relation(fields: [juegoId], references: [id])
}