generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo para los juegos
model Juego {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String
  estrellas   Int      @default(0)
  imagen      String
  trailer     String
  precio      Float
  oferta      Boolean  @default(false)
  plataforma  String
  categoria   String
  resenas     Resena[]
  carrito     CarritoItem[]
  comprasDetalle CompraDetalle[] 
}

// Modelo para las rese√±as
model Resena {
  id        Int      @id @default(autoincrement())
  texto     String
  estrellas Int
  juegoId   Int
  userId    Int
  juego     Juego    @relation(fields: [juegoId], references: [id])
  usuario   Usuario  @relation(fields: [userId], references: [id])
}

model Usuario {
  id       Int    @id @default(autoincrement())
  nombre   String
  email    String @unique
  password String
  carrito  CarritoItem[]
  compras  Compra[] 
  resenas   Resena[]
}

model Noticia {
  id        Int    @id @default(autoincrement())
  titulo    String
  contenido String
  fecha     String
}

model CarritoItem {
  id        Int     @id @default(autoincrement())
  userId    Int
  juegoId   Int
  cantidad  Int     @default(1)
  usuario   Usuario @relation(fields: [userId], references: [id])
  juego     Juego   @relation(fields: [juegoId], references: [id])
}

model Compra {
  id        Int      @id @default(autoincrement())
  userId    Int
  fecha     DateTime @default(now())
  usuario   Usuario  @relation(fields: [userId], references: [id])
  detalles  CompraDetalle[]
}

model CompraDetalle {
  id        Int      @id @default(autoincrement())
  compraId  Int
  juegoId   Int
  cantidad  Int
  clave     String
  compra    Compra   @relation(fields: [compraId], references: [id])
  juego     Juego    @relation(fields: [juegoId], references: [id])
}